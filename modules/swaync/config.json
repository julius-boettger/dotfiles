{
  "$schema": "https://raw.githubusercontent.com/ErikReider/SwayNotificationCenter/73521f530b19d5c5fa043cdbdaeb2691f856f92e/src/configSchema.json",

  "cssPriority": "user",
  "image-visibility": "when-available",

  "positionX": "center",
  "positionY": "top",

  "layer": "overlay",
  "control-center-layer": "overlay",

  "control-center-width": 800,
  "notification-window-width": 600,

  "hide-on-clear": true,
  "hide-on-action": false,

  "timeout-critical": 10,
  "timeout": 5,
  "timeout-low": 2,

  "script-fail-notify": false,
  "scripts": {
    "sound": {
      "exec": "[ $(swaync-client -I) == 'false' ] && aplay /etc/dotfiles/misc/notification.wav",
      "run-on": "receive"
    }
  },

  "widgets": [
    "title",
    "mpris",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "button-text": "Clear"
    },
    "mpris": {
      "show-album-art": "when-available"
    }
  }
}
